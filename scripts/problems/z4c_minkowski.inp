<job>
problem_id      = minkowski         # Basename of output filenames

<problem>
test        = minkowski

<z4c>
lapse_harmonic  = 0.0       # Harmonic lapse parameter mu_L
lapse_oplog     = 1.0       # 1+log lapse parameter
shift_eta       = 2.0       # Shift damping term
diss            = 0.02      # Kreiss-Oliger dissipation parameter
chi_div_floor   = 1e-6
damp_kappa1     = 0.00      # Constraint damping factor 1
damp_kappa2     = 0.01      # Constraint damping factor 2

npunct = 1

<ahf>
num_horizons = 0

start_time_0 = 0
stop_time_0  = 10000
wait_until_punc_are_close_0 = false


<initial_data>
punc_ADM_mass    = 1.0

<output1>
file_type       = hst       # History data
dt              = 0.1      # time increment between outputs
data_format     = %.16e

<output2>
file_type       = hdf5                 # Athena++ hdf5 data
variable        = z4c                  # variables to be output
dt              = 1                  # time increment between outputs
data_format     = %.16e

<output3>
file_type       = hdf5                 # Athena++ hdf5 data
variable        = adm                  # variables to be output
dt              = 0.1                  # time increment between outputs
data_format     = %.16e

<output4>
file_type       = hdf5                 # Athena++ hdf5 data
variable        = con                  # variables to be output
dt              = 1                  # time increment between outputs
data_format     = %.16e

<time>
cfl_number      = 0.2                 # The Courant, Friedrichs, & Lewy (CFL) number
tlim            = 100                   # time limit
integrator      = rk4                  # time integrator

<mesh>
refinement      = static               # Static mesh refinement
nx1             = 32                    # Number of zones in X1-direction
x1min           = -100                  # minimum value of X1
x1max           =  100                  # maximum value of X1
ix1_bc          = periodic  # inner-X1 boundary flag
ox1_bc          = periodic  # inner-X1 boundary flag

nx2             = 32                    # Number of zones in X2-direction
x2min           = -100                  # minimum value of X2
x2max           =  100                  # maximum value of X2
ix2_bc          = periodic  # inner-X2 boundary flag
ox2_bc          = periodic  # inner-X2 boundary flag

nx3             = 32                    # Number of zones in X3-direction
x3min           = -100                  # minimum value of X3
x3max           =  100                  # maximum value of X3
ix3_bc          = periodic  # inner-X3 boundary flag
ox3_bc          = periodic  # inner-X3 boundary flag

num_threads = 8                      # Number of OpenMP threads per process
numlevel = 3  # <refinement> level + 1


<meshblock>
nx1             = 16
nx2             = 16
nx3             = 16

<refinement1>
x1min           = -10.2
x1max           = 10.2
x2min           = -10.2
x2max           = 10.2
x3min           = -10.2
x3max           = 10.2
level           = 2
