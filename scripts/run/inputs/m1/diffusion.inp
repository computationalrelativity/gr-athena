<comment> # ===================================================================
# additional comments (such as e.g. compilation parameters go here)
# ...
# =============================================================================

<job> # =======================================================================
problem_id = diffusion
# =============================================================================

<time> # ======================================================================
cfl_number   = 0.5
tlim	       = 2
ncycle_out   = 1      # interval for stdout summary info
# =============================================================================

<mesh> # ======================================================================
# no. cell in dir, min/max x, inner/outer BC
nx1    = 20
x1min  = -3
x1max  = 3
ix1_bc = outflow
ox1_bc = outflow

nx2    = 4
x2min  = -1
x2max  = 1
ix2_bc = outflow
ox2_bc = outflow

nx3    = 4
x3min  = -1
x3max  = 1
ix3_bc = outflow
ox3_bc = outflow

refinement = none
num_threads = 1
# =============================================================================

<meshblock> # =================================================================
nx1 = 10
nx2 = 4
nx3 = 4
# =============================================================================

<M1> # ========================================================================
test = diffusion

opacities = fake


# element of: {thin, thick, Minerbo}
closure_variety = Minerbo

# element of: {approximate, exact}
characteristics_variety = approximate

# element of: {fluid, mixed, zero, none}
fiducial_velocity = fluid

ngroups  = 2
nspecies = 3

# tolerances / ad-hoc fiddle parameters
fl_E = 1e-15
fl_J = 1e-15
eps_E = 1e-5
eps_J = 1e-10

# [Minerbo] closure root tolerance & maximum iterations
eps_C = 1e-6
max_iter_C = 64

# =============================================================================

<FakeOpacities> # =============================================================
kappa_sca_0_0 = 1000.
# =============================================================================

<problem> # ===================================================================
diff_profile = step # only in x direction!
medium_velocity = 0.0
# =============================================================================

<refinement1> # ===============================================================
x1min =  -0.2
x1max =  0.2
x2min = -1.0
x2max = -1.0
x3min = -1.0
x3max =  1.0
level = 2
# =============================================================================

# dumped quantities ===========================================================
# <output1>
# file_type = rst
# dt        = 1

<output2>
file_type   = hdf5
variable    = m1_lab
dt          = 0.1
ghost_zones = true

<output2>
file_type   = hdf5
variable    = m1_lab
dt          = 0.1
ghost_zones = true
x2_slice    = 0.0
x3_slice    = 0.0

