<job>
problem_id      = wave_2d   # Basename of output filenames

<problem>
x1prof          = linear    # Either 'linear' or 'bump'

x1dir           = 0         # Allowed values are -1, 0, 1 and correspond to
                            # Left, LC Left+Right, Right propagation resp.

<output1>
file_type       = hst       # History data
dt              = 1       # time increment between outputs
data_format     = %.16e

<time>
cfl_number      = 0.2       # The Courant, Friedrichs, & Lewy (CFL) number
tlim            = 0.1        # time limit
integrator      = rk4       # time integrator

<mesh>
refinement      = adaptive    # Static mesh refinement

nx1             = 64  # Number of zones in X1-direction
x1min           = -1.0      # minimum value of X1
x1max           = 1.0      # maximum value of X1
ix1_bc          = periodic  # inner-X1 boundary flag
ox1_bc          = periodic  # outer-X1 boundary flag

nx2             = 64      # Number of zones in X2-direction
x2min           = -1.0      # minimum value of X2
x2max           = 1.0      # maximum value of X2
ix2_bc          = periodic  # inner-X2 boundary flag
ox2_bc          = periodic  # outer-X2 boundary flag

nx3             = 1         # Number of zones in X3-direction
x3min           = -1.0      # minimum value of X3
x3max           =  1.0      # maximum value of X3
ix3_bc          = periodic  # inner-X3 boundary flag
ox3_bc          = periodic  # outer-X3 boundary flag

numlevel = 5  # <refinement> level + 1
derefine_count = 5

num_threads = 1        # Number of OpenMP threads per process

<wave>
c               = 1.0
use_Sommerfeld  = 0         # type of Sommerfeld condition to apply (if any)

<meshblock>
nx1        = 16    # Number of zones per MeshBlock in X1-direction
nx2        = 16    # Number of zones per MeshBlock in X2-direction
nx3        = 1         # Number of zones per MeshBlock in X3-direction


<refinement1>
x1min =  -0.2
x1max =  0.2
x2min =  -0.2
x2max =  0.2
x3min = -1.0
x3max =  1.0
level = 2

