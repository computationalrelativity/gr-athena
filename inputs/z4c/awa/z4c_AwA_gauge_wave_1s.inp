<comment> # ===================================================================
# additional comments (such as e.g. compilation parameters go here)
# ...
# =============================================================================

<job> # =======================================================================
problem_id = z4c_AwA_gauge_wave_1s
# =============================================================================

<z4c> # =======================================================================
lapse_harmonic  = 0.0
lapse_harmonicf = 1.0
lapse_oplog     = 2.0
lapse_advect    = 1.0
lapse_K         = 0.0

shift_Gamma       = 1.0  # T 2011: BNS takes 0.75
shift_eta         = 2.0   # T 2011
shift_alpha2Gamma = 0.0
shift_H           = 0.0
shift_advect      = 1.0

# Kreiss-Oliger dissipation parameter.
diss = 0.02
# conformal factor flooring
chi_div_floor = 1e-5

# Constraint damping factors
damp_kappa1 = 0.02
damp_kappa2 = 0.0

# Apple with apples test parameters
AwA_amplitude = 0.01

# =============================================================================

<task_triggers>  # ============================================================
# control frequency of task execution; certain constraints are augmented
# further automatically by choices in output block

# missing / zero values do not get activated
adjust_mesh_dt = true

dt_tracker_extrema = 0.25
dt_Z4c_Weyl     = 0.0
# =============================================================================

<time> # ======================================================================
cfl_number   = 0.25
tlim	     = 1000
integrator   = bt_rk4   # time integration algorithm

ncycle_out   = 1      # interval for stdout summary info
# =============================================================================

<mesh> # ======================================================================
# no. cell in dir, min/max x, inner/outer BC
nx1    = 30
x1min  = -1
x1max  = 1
ix1_bc = periodic
ox1_bc = periodic

nx2    = 10
x2min  = -1
x2max  = 1
ix2_bc = periodic
ox2_bc = periodic

nx3    = 10
x3min  = -1
x3max  = 1
ix3_bc = periodic
ox3_bc = periodic

refinement = none
# numlevel = 15
# deref_count = 5

num_threads = 3

# impose bitant symmetry (use with ix3_bc=reflecting)
# bitant = true
# =============================================================================

<meshblock> # =================================================================
nx1=10
nx2=10
nx3=10
# =============================================================================

<problem> # ===================================================================
test = gauge_wave1_shifted
# =============================================================================

# dumped quantities ===========================================================
<output1>
file_type = rst
dt        = 100

<output2>
file_type   = hst
dt          = 0.1
data_format = %.18g

<output3>
file_type   = hdf5
variable    = geom.con
ghost_zones = true
dt          = 1.5
x2_slice    = 0.0
x3_slice    = 0.0

<output4>
file_type   = hdf5
variable    = geom.adm
ghost_zones = true
dt          = 1.5
x2_slice    = 0.0
x3_slice    = 0.0

<output5>
file_type   = hdf5
variable    = geom.z4c
ghost_zones = true
dt          = 1.5
x2_slice    = 0.0
x3_slice    = 0.0

